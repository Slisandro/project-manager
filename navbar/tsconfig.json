{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noEmit": false,  // ðŸ”¥ Permite generar archivos de tipos
    "skipLibCheck": true,
    "isolatedModules": true,
    "emitDeclarationOnly": false,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@mf-types/*": ["./node_modules/.federation/@mf-types/*"]
    },
    "outDir": "dist/types"  // ðŸ”¥ Asegura que los tipos tengan salida
  },
  "include": ["src", "node_modules/.federation"],  // ðŸ”¥ Incluye los tipos federados
  "exclude": ["node_modules", "dist"],  // ðŸ”¥ Excluye archivos innecesarios
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
